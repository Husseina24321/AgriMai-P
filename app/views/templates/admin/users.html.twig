{% extends "admin/layout.html.twig" %}

{% block content %}
    <h1>Gestion des utilisateurs</h1>

    <table>
        <tr>
            <th>ID</th>
            <th>Nom</th>
            <th>Email</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.username }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.status }}</td>
                <td>
                    {% if user.status == 'pending' %}
                        <a href="/admin/users/validate/{{ user.id }}">Valider</a>
                    {% endif %}
                </td>
            </tr>
        {% endfor %}
    </table>
{% endblock %}
