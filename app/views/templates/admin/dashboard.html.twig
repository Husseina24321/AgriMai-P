{% extends "/admin/layout.html.twig" %}

{% block content %}
    <h1>Tableau de Bord</h1>

    <section>
        <h2>Utilisateurs</h2>
        <ul>
            <li>Total : {{ totalUsers }}</li>
            <li>Actifs : {{ activeUsers }}</li>
            <li>En attente : {{ pendingUsers }}</li>
            <li>Bannis : {{ bannedUsers }}</li>
        </ul>
    </section>

    <section>
        <h2>Produits</h2>
        <p>Total : {{ totalProducts }}</p>
        <h3>Produits récents</h3>
        <ul>
            {% for product in recentProducts %}
                <li>{{ product.name }} ({{ product.created_at }})</li>
            {% else %}
                <li>Aucun produit récent</li>
            {% endfor %}
        </ul>
    </section>

    <section>
        <h2>Commandes</h2>
        <p>Total : {{ totalOrders }}</p>
        <h3>Commandes récentes</h3>
        <ul>
            {% for order in recentOrders %}
                <li>Commande #{{ order.id }} - {{ order.created_at }}</li>
            {% else %}
                <li>Aucune commande récente</li>
            {% endfor %}
        </ul>
    </section>

    <section>
        <h2>Messages</h2>
        <p>Total : {{ totalMessages }}</p>
    </section>
{% endblock %}
