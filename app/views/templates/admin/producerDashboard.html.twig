{% extends "/admin/layout.html.twig" %}

{% block content %}
    <h1>Bienvenue sur ton tableau de bord Producteur</h1>

    {# --- Formulaire d‚Äôajout --- #}
    <section>
        <h2>Ajouter un nouveau produit</h2>
        <form action="/AgriMai/index.php?route=createProduct" method="POST" enctype="multipart/form-data">
            <label>Nom du produit
                <input type="text" name="product_name" required>
            </label>

            <label>Photo
                <input type="file" name="product_image" accept="image/*" required>
            </label>

            <label>Prix/kg
                <input type="number" step="0.01" name="price_per_kg" required>
            </label>

            <input type="hidden" name="csrf-token" value="{{ csrfToken }}">
            <button type="submit">‚ûï Enregistrer</button>
        </form>
    </section>

    <hr>

    {# --- Liste des produits du producteur --- #}
    <section>
        <h2>Mes Produits</h2>
        {% if products is not empty %}
            <table>
                <thead>
                <tr>
                    <th>Image</th>
                    <th>Nom</th>
                    <th>Prix/kg</th>
                    <th>Actions</th>
                </tr>
                </thead>
                <tbody>
                {% for product in products %}
                    <tr>
                        <td><img src="{{ product.imagePath }}" alt="{{ product.name }}" width="80"></td>
                        <td>{{ product.name }}</td>
                        <td>{{ product.pricePerKg }} ‚Ç¨</td>
                        <td>
                            {# --- Modifier --- #}
                            <form action="/AgriMai/index.php?route=editProduct={{ product.id }}" method="POST" style="display:inline;">
                                <input type="hidden" name="csrf-token" value="{{ csrfToken }}">
                                <button type="submit">‚úèÔ∏è Modifier</button>
                            </form>

                            {# --- Supprimer --- #}
                            <form action="/AgriMai/index.php?route=deleteProduct={{ product.id }}" method="POST" style="display:inline;"
                                  onsubmit="return confirm('Supprimer ce produit ?');">
                                <input type="hidden" name="csrf-token" value="{{ csrfToken }}">
                                <button type="submit">üóëÔ∏è Supprimer</button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        {% else %}
            <p>Tu n‚Äôas encore ajout√© aucun produit.</p>
        {% endif %}
    </section>
{% endblock %}
