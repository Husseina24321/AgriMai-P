{% extends "/front/layout.html.twig" %}

{% block content %}
    <h1>Bienvenue sur AgriMai</h1>

    <!-- Section Produits récents -->
    <section>
        <h2>Produits récents</h2>
        {% if recentProducts is not empty %}
            <ul>
                {% for product in recentProducts %}
                    <li>
                        <img src="assets/uploads/{{ product.image }}" alt="{{ product.title }}" width="100">
                        <strong>{{ product.title }}</strong> - {{ product.price }} €/kg
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun produit récent disponible.</p>
        {% endif %}
    </section>

    <!-- Section Produits par région : Normandie -->
    <section>
        <h2>Produits en Normandie</h2>
        {% if regionProducts['Normandie'] is not empty %}
            <ul>
                {% for product in regionProducts['Normandie'] %}
                    <li>
                        <img src="assets/uploads/{{ product.image }}" alt="{{ product.title }}" width="100">
                        <strong>{{ product.title }}</strong> - {{ product.price }} €/kg
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun produit disponible en Normandie pour le moment.</p>
        {% endif %}
    </section>

    <!-- Tu peux répliquer la même section pour Alsace, Loire, etc. -->
    <section>
        <h2>Produits en Alsace</h2>
        {% if regionProducts['Alsace'] is not empty %}
            <ul>
                {% for product in regionProducts['Alsace'] %}
                    <li>
                        <img src="assets/uploads/{{ product.image }}" alt="{{ product.title }}" width="100">
                        <strong>{{ product.title }}</strong> - {{ product.price }} €/kg
                    </li>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun produit disponible en Alsace pour le moment.</p>
        {% endif %}
    </section>

{% endblock %}

