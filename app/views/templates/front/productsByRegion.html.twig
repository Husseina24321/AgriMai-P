{% extends "/front/layout.html.twig" %}

{% block content %}
    <section id="products-Regions">
        <div class="header-card">
            {% if products is not empty %}
                <h1>
                    Les Reinettes Grise du Canada de la
                    {{ products[0].getLocation().value }}
                </h1>
            {% else %}
                <h1>Les Reinettes Grise du Canada de notre région</h1>
            {% endif %}

            <a href="/AgriMai/index.php?route=market" class="btn">Voir tout</a>
        </div>

        <div class="grid">
            {% if products is not empty %}
                {% for product in products %}
                    <div class="card">
                        <img src="/AgriMai/public/uploads/{{ product.getImage() }}" alt="{{ product.getTitle() }}">
                        <h3>{{ product.getTitle() }}</h3>
                        <p>{{ product.getProducteur() }}</p>
                        <p>{{ product.getPrice() }} € / kg</p>
                        <div class="actions">
                            <a href="/AgriMai/index.php?route=product-detail&id={{ product.getId() }}" class="btn">Voir</a>
                        </div>
                    </div>
                {% endfor %}
            {% else %}
                <p>Aucun produit disponible pour le moment.</p>
            {% endif %}
        </div>
    </section>
{% endblock %}
