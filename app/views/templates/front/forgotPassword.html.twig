{% extends "/front/layout.html.twig" %}
{% block content %}
    <section id="forgot-password">
        <div class="forgot-body">
            <h2>Mot de passe oublié </h2>

            {% if errorMessage %}
                <p class="alert-dangerForgot">{{ errorMessage }}</p>
            {% endif %}
            {% if successMessage %}
                <p class="alert-successForgot">{{ successMessage }}</p>
            {% endif %}
            <p>Veuillez saisir l’adresse email associée à votre compte</p>

            <form method="POST" action="./index.php?route=forgot-password" class="form-forgot">
                <input type="hidden" name="csrf-token" value="{{ csrfToken }}">

                <div class="form-group">
                    <label for="email">Email :</label>
                    <input type="email" id="email" name="email" placeholder="Votre email" required>
                </div>

                <div class="form-btn">
                    <button type="submit">Envoyer</button>
                </div>
            </form>

            <a href="./index.php?route=login">Retour à la connexion</a>
        </div>
    </section>
{% endblock %}