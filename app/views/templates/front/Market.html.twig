{% extends "/front/layout.html.twig" %}

{% block content %}
    <section id="products-market">
        <div class="market-body">
            <div class="header-market">
                <h1>Marché de tous les produits de nos régions</h1>
            </div>

            <div class="grid-market">
                {% if products is not empty %}
                    {% for product in products %}
                        <div class="card-market">
                            <img src="./public/uploads/{{ product.getImage() }}" alt="{{ product.getTitle() }}">
                            <h2>{{ product.getTitle() }}</h2>
                            <p class="producteur">{{ product.getProducteur() }}</p>
                            <p class="prix">{{ product.getPrice() }} € / kg</p>
                            <div class="actions">
                                <a href="./index.php?route=product-detail&id={{ product.getId() }}" class="btnMarket">Voir</a>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>Aucun produit disponible pour le moment.</p>
                {% endif %}
            </div>
        </div>
    </section>
{% endblock %}
