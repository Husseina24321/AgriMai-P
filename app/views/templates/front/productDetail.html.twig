{% extends "/front/layout.html.twig" %}

{% block content %}

    <div class="productDetail-page">
        <div class="productDetail-breadcrumb">
            <a href="#">Voir tout</a>
            <a href="#">Catégorie</a> >
            <span>{{ product.getTitle() }}</span>
        </div>

        <div class="productDetail-container">
            <!-- Partie gauche : infos -->
            <div class="productDetail-info">
                <h1>{{ product.name }}</h1>
                <p>{{ product.price }} € / kg</p>

                <div class="productDetail-rating">
                    ★★★★☆ <span>({{ product.rating }} étoiles) - {{ product.reviewsCount }} avis</span>
                </div>

                <!-- Onglets -->
                <div class="productDetail-tabs">
                    <button class="productDetail-tab active">Détails</button>
                    <button class="productDetail-tab">Livraison</button>
                    <button class="productDetail-tab">Retours</button>
                </div>

                <!-- Description venant de la BD -->
                <div class="productDetail-description">
                    {{ product.description|raw }}
                </div>
            </div>

            <!-- Partie droite : image + achat -->
            <div class="productDetail-purchase">
                <img src="/AgriMai//assets/styles/img/{{ product.image }}" alt="{{ product.name }}">


                <div class="productDetail-lots">
                    <p>Les lots:</p>
                    <button class="productDetail-lot-btn active">2Kg</button>
                    <button class="productDetail-lot-btn">5Kg</button>
                </div>

                <p class="productDetail-contact-text">Pour une grande quantité? <a href="#">Contactez-nous</a></p>

                <div class="productDetail-order">
                    <label for="lots">Les lots</label>
                    <select id="lots" name="lots">
                        <option value="">Sélectionner</option>
                        <option value="2kg">2 Kg</option>
                        <option value="5kg">5 Kg</option>
                    </select>

                    <label for="qty">Qté</label>
                    <input type="number" id="qty" name="qty" min="1" value="1">
                </div>

                <button class="productDetail-btn productDetail-add-cart">Ajouter au panier</button>
                <button class="productDetail-btn productDetail-buy-now">Acheter maintenant</button>
                <p class="productDetail-free-shipping">Livraison gratuite à partir de 50 €</p>
            </div>
        </div>
    </div>

{% endblock %}
